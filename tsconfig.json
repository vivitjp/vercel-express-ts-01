{
  "compilerOptions": {
    //Style
    "target": "es2018",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,

    //Input & OUtput
    "baseUrl": "./",
    "outDir": "./dist",

    //Debug
    "sourceMap": false,
    "esModuleInterop": true,
    "removeComments": true,
    //"moduleResolution": "node",
    "incremental": true,

    // "allowSyntheticDefaultImports": true,  //"esModuleInterop"で自動で有効
//    "skipLibCheck": true,
//    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*", "*.(ts|js)"],
  "exclude": ["./src/**/__tests__/*", "./src/**/__skip__/*"]
}